# FVI System Environment Configuration
# Copy this file to .env and customize as needed

# ============================================
# Application Configuration
# ============================================

# Data directory path (relative to project root)
DATA_DIR=data

# Vectorstore directory path
VECTORSTORE_DIR=vectorstore

# Log configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fvi.log

# ============================================
# Server Configuration
# ============================================

# Backend API settings
API_HOST=127.0.0.1
API_PORT=8089

# Frontend settings
FRONTEND_HOST=localhost
FRONTEND_PORT=8502

# ============================================
# AI/ML Configuration
# ============================================

# Sentence transformer model for embeddings
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Vector store settings
FAISS_INDEX_TYPE=IndexFlatIP
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================
# Performance Settings
# ============================================

# Maximum number of documents to retrieve
MAX_DOCS_RETRIEVE=5

# API timeout settings (seconds)
API_TIMEOUT=30

# Cache settings
ENABLE_CACHE=true
CACHE_TTL=3600

# ============================================
# Development Settings
# ============================================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable API auto-reload for development
API_AUTO_RELOAD=false

# Streamlit configuration
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# ============================================
# Security Settings (for production)
# ============================================

# API key for external services (if needed)
# API_KEY=your_api_key_here

# CORS settings for production
# ALLOWED_ORIGINS=["http://localhost:8502", "https://yourdomain.com"]

# ============================================
# Optional: External Services
# ============================================

# OpenAI API key (if using OpenAI models)
# OPENAI_API_KEY=your_openai_key_here

# HuggingFace token (if using private models)
# HUGGINGFACE_TOKEN=your_hf_token_here

# ============================================
# Database Settings (future use)
# ============================================

# Database URL for persistent storage
# DATABASE_URL=sqlite:///fvi_system.db

# Redis URL for caching
# REDIS_URL=redis://localhost:6379

# ============================================
# Monitoring & Analytics
# ============================================

# Enable application metrics
ENABLE_METRICS=false

# Analytics tracking (if implemented)
ENABLE_ANALYTICS=false
